<!DOCTYPE html>
<html>
<head>
  <title>A</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user %>
<%= link_to "Gadget Gallery", :controller=>:gadgets, :action=>:index, :type=>:gallery %>
<%= link_to "Gadget List", :controller=>:gadgets, :action=>:index %>

<%= link_to "Logout", "/logout" %>
<% else %>
<%= link_to "Login", :action=>:new, :controller=>:user_sessions %>
<%= link_to "Register", :controller=>:users, :action=>:new %>

<% end %>
<hr/>
<%= yield %>

</body>
</html>
